<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MenuUsuarioActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Detalhes do Contrato"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/energy"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/energy"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/energy"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:text="Você está prestes a firmar um contrato de fornecimento de energia sustentável com a EnergyLink. contribuindo para um futuro mais verde e acessível. Este contrato permite o uso de energia limpa, reduzindo custos e promovendo a autossuficiência energética. "
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aceitar"
        android:layout_width="163dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/rounded_aceitar"
        android:gravity="center"
        android:lineSpacingExtra="5.6sp"
        android:text="Aceitar"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recusar"
        android:layout_width="0dp"
        android:layout_height="37dp"

        android:layout_marginStart="18dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_recusar"
        android:gravity="center"
        android:lineSpacingExtra="5.6sp"
        android:text="Recusar"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toStartOf="@+id/aceitar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton5"
        app:layout_constraintStart_toEndOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/aceitar"
        app:layout_constraintVertical_bias="0.644"
        app:srcCompat="@drawable/contrato" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="89dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recusar" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Ao aceitar este contrato, você estará adquirindo energia ao preço competitivo de R$ 0,25 por kWh, garantindo eficiência e economia para sua empresa ou residência. O contrato terá a duração de 12 meses, e todos os detalhes, incluindo as condições e o acompanhamento das transações, estarão disponíveis para consulta em tempo real.
Certifique-se de revisar os detalhes e, ao confirmar, você estará promovendo uma mudança positiva para o meio ambiente e aproveitando os benefícios de um sistema energético mais eficiente"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/aceitar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>